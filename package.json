{
  "name": "abswap",
  "version": "2.2.9",
  "description": "Swap a/b directories or files using symlinks",
  "author": "Michael Roth <mail@mroth.net>",
  "license": "MIT",
  "files": [
    "src",
    "lib",
    "!lib/tsconfig.tsbuildinfo",
    "assets",
    "yarn.lock"
  ],
  "bin": {
    "abswap": "lib/cli.js"
  },
  "main": "lib/abswap/index.js",
  "scripts": {
    "build": "tsc",
    "test": "scripts/prepare-testdata && (jest --all; rm -rf testdata)",
    "watch": "jest --watch",
    "clean": "rm -rf lib testdata",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -p .",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run lint && npm test"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.4.14",
    "jest": "^27.0.6",
    "jest-junit": "^12.0.0",
    "prettier": "2.3.2",
    "ts-jest": "^27.0.4",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "commander": "^8.1.0",
    "fs-extra": "^10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrothNET/abswap.git"
  },
  "homepage": "https://github.com/mrothNET/abswap",
  "keywords": [
    "shell",
    "cli",
    "swap",
    "switch",
    "directory",
    "file",
    "symlink"
  ],
  "jest": {
    "roots": [
      "src"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "outputName": "./testresults.xml"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": false
  }
}
