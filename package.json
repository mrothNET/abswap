{
  "name": "abswap",
  "version": "1.0.0",
  "description": "Swap a/b directories or files using symlinks",
  "author": "Michael Roth <mail@mroth.net>",
  "license": "MIT",
  "files": [
    "lib/**/*",
    "assets/**/*",
    "yarn.lock"
  ],
  "bin": {
    "abswap": "lib/cli.js"
  },
  "main": "lib/abswap.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --all",
    "watch": "jest --watch",
    "clean": "rm -rf lib",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -p .",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run lint && npm test"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "fs-extra": "^8.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrothNET/abswap.git"
  },
  "homepage": "https://github.com/mrothNET/abswap",
  "keywords": [
    "shell",
    "cli",
    "swap",
    "switch",
    "directory",
    "file",
    "symlink"
  ],
  "jest": {
    "roots": [
      "src"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "output": "./testresults.xml"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": false
  }
}
